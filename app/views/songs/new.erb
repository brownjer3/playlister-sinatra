<h1> ADD NEW SONG </h1>

<form action='/songs' method='post'>
    <h5>Song Name: </h5>
    <input id='Name' type='text' name="song[name]" />

    <h5>Select Genre: </h5>
    <% @genres.each do |g| %>
        <input id="<%=g.name%>" type="checkbox" name="song[genre_ids][]" value="<%=g.id%>" /> <%= g.name %>
    <% end %>

    <h5>And/Or Create New Genre: </h5>
    <input type='text' name="genre[name]" />


    <h5>Select Artist: </h5>
    <% @artists.each do |a| %>
        <input type='radio' name="song[artist_id]" value="<%=a.id%>" /> <%= a.name %>
    <% end %>

    <h5>Or Create New Artist: </h5>
    <input id="Artist Name" type='text' name="artist[name]" />

    <br /><br />
    <input type='submit' value='Create' />
</form>